<!DOCTYPE html>
<html>

<head>
    <!--  <title>{{ title }}</title> -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="javascripts/handleFileSelect.js"></script>
    <!-- Own css -->
    <link rel="stylesheet" href="stylesheets/style.css" />
</head>

<body>
    <ul id="myTab" class="nav nav-tabs">
        <li class="active">
            <a href="#home" data-toggle="tab">
           Corpus Preparation
        </a>
        </li>

        <li><a href="#Training" data-toggle="tab">Training</a>
        </li>

    </ul>


    <div id="myTabContent" class="tab-content">
        <div class="tab-pane fade in active" id="home">

            <form enctype="multipart/form-data" id="formoid" method="post">
                <div class="row">
                    <div class="col-sm-3">
                        <h5><b>Languages</b></h5>
                        <div class="well">
                            <b>Source text</b>
                            <select name="src_lang" id="src_lang">
                                <option value="en">en</option>
                                    <option value="fr">fr</option>
                                        <option value="de">de</option>
                            </select>
                            <br>
                            <b>Target text&nbsp; </b>
                            <select name="trg_lang" id="trg_lang">
                                <option value="en">en</option>
                                    <option value="fr">fr</option>
                                        <option value="de">de</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-5   col-sm-offset-4">
                        <h5><b>Translation Model</b></h5>
                        <div class="well">
                            <input id="TM" name="TM" type="file">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-7">
                        <h5><b>Results</b></h5>
                        <div class="well">
                            <p>Results</p>
                            <br>
                            <br>
                            <br>
                            <br>
                            <br>
                            <br>
                            <br>
                            <br>
                            <br>
                            <br>
                            <br>
                        </div>
                    </div>
                    <div class="col-sm-5">

                        <div class="row">
                            <h5><b>Language Model</b></h5>
                            <div class="well">
                                <input type="file" id="files" name="LM" />
                                <button onclick="abortRead();">Cancel</button>
                                <div id="progress_bar"><div class="percent">0%</div></div>
                            </div>
                        </div>
                        <div class="row">
                            <h5><b>Settings</b></h5>
                            <div class="well">
                                this is not neccesary now, as the user can download the results anytime.
                            </div>
                        </div>
                        <div class="row">
                            <div class="well">
                                <input type="submit" value="Start corpus preproccesing">
                            </div>
                        </div>
                    </div>
                </div>

            </form>


            <script>addEventListenerToFileUploads(document);</script>
        </div>


        <div class="tab-pane fade" id="Training">
            <div class="tab-pane fade in active" id="home">
                <div class="col-sm-6">
                    <div class="well well-lg">
                        <p>2 to {{ title }}!</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="tab-pane fade" id="Machine Translation">
            <div class="tab-pane fade in active" id="home">
                <div class="col-sm-6">
                    <div class="well well-lg">
                        <p>2 to {{ title }}!</p>
                    </div>
                </div>
            </div>
        </div>

        <div id="response"></div>
        <script type='text/javascript'>
        $(function(){
          $("#formoid").submit(function(event){
              event.preventDefault();
              var input = document.getElementById('files');
              if (!input.files[0]) {
                alert("Please select a file before clicking 'Load'");
              }
              else {
                file = input.files[0];
                var reader = new FileReader();
                reader.readAsText(file);
                reader.onload = function(e) {
                            // browser completed reading file - display it
                            //alert(e.target.result);
                            $.ajax({
                                    url:'',
                                    type:'POST',
                                    data:"&src_lang=" + $("#src_lang").val() + "&trg_lang=" + $("#trg_lang").val() + '&LM=' + e.target.result + '&TM=' + $("#TM").val(),
                                    success:function(result){
                                        $("#response").text(JSON.stringify(result));
                                    }
                                  });
                        };
              }
          });
        });
        </script>

        {{src_lang}} {{trg_lang}} {{TM}} {{LM}}
</body>

</html>
